<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Applique le dégradé lorsque l'élément est sélectionné -->
    <item android:state_checked="true" android:drawable="@drawable/degrade"/>

    <!-- Fond transparent lorsque l'élément n'est pas sélectionné -->
    <item android:drawable="@android:color/transparent"/>
</selector>

